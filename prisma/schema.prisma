model Constraint {
  project String
  name    String
  value   Int

  @@id([name, project])
}

model Sprint {
  id    Int     @id @default(autoincrement())
  name  String?
  tasks Task[]
}

model Owner {
  id    Int     @id @default(autoincrement())
  name  String?
  tasks Task[]
}
