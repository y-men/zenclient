datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id        String    @id @default(uuid())
  name      String
  desc      String?
  sprint    Sprint?   @relation(fields: [sprintId], references: [id])
  sprintId  String?
  owner     Owner?    @relation(fields: [ownerId], references: [id])
  ownerId   String?
  loe       Int?
  startDate DateTime?
  endDate   DateTime?
  sequence  Float?
}

model Constraint {
  project String
  name    String
  value   Int

  @@id([name, project])
}

model Sprint {
  id    String  @id @default(uuid())
  name  String?
  tasks Task[]
}

model Owner {
  id    String  @id @default(uuid())
  name  String?
  tasks Task[]
}
