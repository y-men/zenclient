datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id               String    @id @default(uuid())
  name             String
  desc             String?
  sprint           Sprint?   @relation(fields: [sprintId], references: [id])
  sprintId         String?
  owner            Owner?    @relation(fields: [ownerId], references: [id])
  ownerId          String?
  epic             Epic?     @relation(fields: [epicId], references: [id])
  epicId           String?
  loe              Int?
  startDate        DateTime?
  endDate          DateTime?
  sequence         Float?
  status           Int?
  actual           Int?
  commited         Int?
  carryover        String?
  carryoverTaskId  String?
  carryoverTask    Task?     @relation("CarryoverRelation", fields: [carryoverTaskId], references: [id])
  carriedOverTasks Task[]    @relation("CarryoverRelation")
  dependencies     Task[]    @relation("TaskDependency")
  dependents       Task[]    @relation("TaskDependency")
}

model Constraint {
  project String
  name    String
  value   Int

  @@id([name, project])
}

model Sprint {
  id                     String                  @id @default(uuid())
  name                   String?
  tasks                  Task[]
  sprintOwnerCommitments SprintOwnerCommitment[]
  epicOwnerCommitments   EpicOwnerCommitment[]
}

model Owner {
  id                     String                  @id @default(uuid())
  name                   String?
  tasks                  Task[]
  sprintOwnerCommitments SprintOwnerCommitment[]
  epicOwnerCommitments   EpicOwnerCommitment[]
}

model SprintOwnerCommitment {
  sprint   Sprint @relation(fields: [sprintId], references: [id])
  sprintId String
  owner    Owner  @relation(fields: [ownerId], references: [id])
  ownerId  String
  commited Int

  @@id([sprintId, ownerId])
}

model Epic {
  id                   String                @id @default(uuid())
  name                 String
  priority             Int?
  shortDesc            String?
  epicDesc             String?
  tasks                Task[]
  epicOwnerCommitments EpicOwnerCommitment[]
}

model EpicOwnerCommitment {
  epic       Epic   @relation(fields: [epicId], references: [id])
  epicId     String
  owner      Owner  @relation(fields: [ownerId], references: [id])
  ownerId    String
  sprint     Sprint @relation(fields: [sprintId], references: [id])
  sprintId   String
  sprintWeek Int
  commited   Int

  @@id([epicId, ownerId])
}
