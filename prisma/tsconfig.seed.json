{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmit": true,
    "baseUrl": "..",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node","jest","reflect-metadata"]
  },
  "include": [
    "../**/*.ts",
    "../**/*.tsx"
  ],
  "exclude": [
    "../node_modules"
  ]
}